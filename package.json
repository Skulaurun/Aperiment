{
  "name": "aperiment",
  "version": "0.14.1",
  "description": "Custom Minecraft Launcher",
  "main": "src/main/App.js",
  "scripts": {
    "start": "electron . --dev",
    "build": "electron-builder --win --ia32 --publish never",
    "build-linux": "electron-builder --linux --publish never",
    "deploy": "electron-builder --win --ia32 --publish always"
  },
  "build": {
    "appId": "eu.skulaurun.aperiment",
    "productName": "Aperiment",
    "publish": {
      "provider": "github"
    },
    "directories": {
      "output": "build",
      "buildResources": "."
    },
    "extraFiles": [
      "README.md",
      "COPYRIGHT.txt",
      "CHANGELOG.txt",
      "LICENSE"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE"
    }
  },
  "devDependencies": {
    "electron": "^21.2.2",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "arch": "^2.1.2",
    "axios": "^1.1.3",
    "compare-versions": "^3.6.0",
    "electron-log": "^4.2.4",
    "electron-updater": "^4.3.5",
    "file-type": "^16.5.4",
    "nanoid": "^4.0.0",
    "rimraf": "^3.0.2",
    "unzipper": "^0.10.11",
    "uuid": "^8.3.0",
    "valid-url": "^1.0.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Skulaurun/a-periment.git"
  },
  "author": "Adam Charv√°t",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Skulaurun/a-periment/issues"
  },
  "homepage": "https://github.com/Skulaurun/a-periment#readme"
}
